@model Group

@{
    ViewBag.Title = "Delete Users";
}

<h3>Are you sure you want to delete this?</h3>

<fieldset>
    <legend>Users</legend>

    @using (Html.BeginForm("DeleteUsers", "Groups", new { id = Model.ID }, FormMethod.Post))
    {
        if (ViewBag.DeleteEnrolledUsers != null)
        {
            <table>
                <tr>
                    <th>&nbsp;</th>
                    <th>Name</th>
                </tr>

                @foreach (var item in ViewBag.DeleteEnrolledUsers)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="deleteUsers" value="@item" />
                        </td>
                        <td>
                            @item
                        </td>
                    </tr>
                }
            </table>
        }
        <br />
        <input name="DeleteUsersButton" type="submit" value="Delete" />
    }
</fieldset>

<p>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.ID })
</p>
